{
  "name": "@recepturomat/ui",
  "sourceRoot": "apps/ui",
  "targets": {
    "test": {
      "executor": "@nx/vitest:test",
      "options": {
        "configFile": "apps/ui/vite.config.ts",
        "passWithNoTests": true
      }
    },
    "build": {
      "executor": "@nx/vite:build",
      "options": {
        "configFile": "apps/ui/vite.config.ts",
        "outputPath": "dist/apps/ui"
      },
      "configurations": {
        "production": {
          "buildOptions": {
            "sourcemap": true,
            "ssr": false
          }
        },
        "dev": {
          "buildOptions": {
            "sourcemap": true,
            "ssr": false,
            "minify": false
          }
        }
      }
    },
    "serve": {
      "executor": "@nx/vite:dev-server",
      "options": {
        "configFile": "apps/ui/vite.config.ts"
      },
      "defaultConfiguration": "dev",
      "configurations": {
        "production": {
          "buildTarget": "@recepturomat/ui:build:production"
        },
        "dev": {
          "buildTarget": "@recepturomat/ui:build:dev"
        }
      }
    },
    "preview": {
      "executor": "@nx/vite:preview-server",
      "options": {
        "configFile": "apps/ui/vite.config.ts"
      },
      "defaultConfiguration": "production",
      "configurations": {
        "production": {
          "buildTarget": "@recepturomat/ui:build:production"
        }
      }
    },
    "typecheck": {
      "executor": "@nx/js:tsc",
      "options": {
        "tsConfig": "apps/ui/tsconfig.app.json"
      }
    }
  }
}
